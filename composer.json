{
  "name": "persoderlind/mediamanager",
  "description": "Virtual folder organization and smart management for the WordPress Media Library.",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.0",
    "brain/monkey": "^2.6"
  },
  "autoload": {
    "psr-4": {
      "MediaManager\\": "includes/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "MediaManagerTests\\": "tests/php/"
    }
  },
  "scripts": {
    "test": "phpunit"
  }
}
