{
	"name": "mediamanager",
	"version": "0.1.13",
	"description": "Virtual folder organization and smart management for the WordPress Media Library.",
	"scripts": {
		"build": "wp-scripts build",
		"start": "wp-scripts start",
		"test": "vitest",
		"i18n": "npm run i18n:make-pot && npm run i18n:update-po && npm run i18n:make-mo && npm run i18n:make-json && npm run i18n:make-php",
		"i18n:make-pot": "wp i18n make-pot . languages/mediamanager.pot --exclude=node_modules,vendor,tests,build --domain=mediamanager",
		"i18n:update-po": "wp i18n update-po languages/mediamanager.pot languages/",
		"i18n:make-mo": "wp i18n make-mo languages/",
		"i18n:make-json": "wp i18n make-json languages/ --no-purge --use-map=i18n-map.json && node -e \"const fs=require('fs'),path='languages/';fs.readdirSync(path).filter(f=>f.endsWith('.json')&&f.includes('1f555e4860f98635501ddff67922e0d5')).forEach(f=>{const content=JSON.parse(fs.readFileSync(path+f));content.source='build/admin.js';fs.writeFileSync(path+f.replace('1f555e4860f98635501ddff67922e0d5','aa377c165c6b87664fc2deacf28cbe53'),JSON.stringify(content));fs.unlinkSync(path+f)})\"",
		"i18n:make-php": "wp i18n make-php languages/"
	},
	"devDependencies": {
		"@testing-library/jest-dom": "^6.9.1",
		"@testing-library/react": "^14.0.0",
		"@testing-library/user-event": "^14.6.1",
		"@vitejs/plugin-react": "^5.1.1",
		"@wordpress/scripts": "^31.1.0",
		"jsdom": "^24.0.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"vitest": "^4.0.0"
	},
	"dependencies": {
		"@dnd-kit/core": "^6.0.0",
		"@dnd-kit/sortable": "^7.0.0",
		"@wordpress/api-fetch": "latest",
		"@wordpress/components": "latest",
		"@wordpress/data": "latest",
		"@wordpress/element": "latest",
		"@wordpress/i18n": "latest",
		"@wordpress/icons": "latest"
	}
}